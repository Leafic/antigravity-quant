server:
  port: 8080

spring:
  application:
    name: antigravity-trading-system
  datasource:
    url: jdbc:postgresql://${DB_HOST:localhost}:${DB_PORT:5432}/${DB_NAME:antigravity}
    username: ${DB_USER:postgres}
    password: ${DB_PASS:postgres}
    driver-class-name: org.postgresql.Driver
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        format_sql: true
  data:
    redis:
      host: ${REDIS_HOST:localhost}
      port: ${REDIS_PORT:6379}

logging:
  level:
    com.antigravity: DEBUG
    org.springframework: INFO

kis:
  app-key: "${KIS_APP_KEY:YOUR_APP_KEY}"
  app-secret: "${KIS_APP_SECRET:YOUR_APP_SECRET}"
  account-no: "${KIS_ACCOUNT_NO:YOUR_ACCOUNT_NO}"
  base-url: "https://openapivts.koreainvestment.com:29443"
